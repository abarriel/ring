{
  "name": "ring",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",

    "db:studio": "pnpm --filter @ring/api db:studio",
    "db:seed": "pnpm --filter @ring/api db:seed",
    "test": "turbo test",
    "test:e2e": "pnpm --filter @ring/mobile test:e2e"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.4",
      "react-dom": "19.2.4",
      "react-native": "0.83.1",
      "react-native-svg": "15.15.3"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react-dom>react": ">=19"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@typescript/native-preview": "7.0.0-dev.20260212.1",
    "@vitest/coverage-v8": "^4.0.18",
    "lefthook": "^2.1.1",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
