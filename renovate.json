{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "minimumReleaseAge": "7 days",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": true
    },
    {
      "matchManagers": ["github-actions"],
      "enabled": true
    }
  ]
}
